	Definir ninos, ninas, cantidadTotal, porcentajeNinos, porcentajeNinas Como Real
	
	Escribir "Ingrese cantidad de niños"
	Leer ninos
	
	Escribir "Ingrese cantidad de niñas"
	Leer ninas
	
	cantidadTotal = ninos + ninas
	porcentajeNinas = (ninas / cantidadTotal) * 100
	porcentajeNinos = (ninos / cantidadTotal) * 100
	
